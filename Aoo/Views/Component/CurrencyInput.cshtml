@model Aoo.ViewModels.Component.CurrencyInputModel;
<input type="text" id="price" class="form-control"  />
<input type="hidden" id="output"  style="display:none" name="@Model" />
<script  src="https://cdnjs.cloudflare.com/ajax/libs/autonumeric/4.1.0/autoNumeric.min.js">

</script>
<script>
    $(document).ready(function () {
     

        const options = {
            allowDecimalPadding	:false,
            currencySymbol: 'VND',
            decimalPlaces: 0,
            minimumValue: 0,
            decimalCharacter:',',
            maximumValue: 999999,
            decimalPlacesOverride:0,
            suffixText: 'VND',
            vMin: 0,
            mDec: 0
          
        };

        const autoNumericOptionsEuro = {
            digitGroupSeparator: '.',
            decimalCharacter: ',',
            decimalCharacterAlternative: '.',
            suffixText: 'VND' ,
            roundingMethod: AutoNumeric.options.roundingMethod.halfUpSymmetric,
        };
        var autoNumericInstance = new AutoNumeric('#price', @Model.Price, { suffixText: 'VND' });
        autoNumericInstance.update({ minimumValue: 0 });
        autoNumericInstance.update({ decimalPlaces: 0 });

        $('#price').on('keyup', function () {
            // Retrieve instance numeric string value
            $('#output').val(autoNumericInstance.getNumericString());
        });

    })
</script>