@model Aoo.ViewModels.Component.PaginationModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<link href="~/css/Component/pagination.css" rel=" stylesheet" type="text/css" />
@{ 
    int PageNumberDislay = Model.totalPage>6?6:Model.totalPage-1;

    int numberpage = 0;
}

<div class="pagination pull-right">
    @if (Model.currentPage != 1)
    {
    <a href="?page=1">&laquo;</a>
    }
    @for (int i = 0; numberpage < PageNumberDislay; i++)
    {
        var LeftPage = Model.currentPage - i;
        var RightPage = Model.currentPage + i;
        if (LeftPage > 1)
        {
            { numberpage++; }
            <a href="?page=@LeftPage" class="@(Model.currentPage == @LeftPage ? "active" : "")"> @LeftPage</a>

        }
        if (RightPage < Model.totalPage)
        {
            { numberpage++; }
            <a href="?page=@RightPage" class="@(Model.currentPage == RightPage ? "active" : "")">@RightPage</a>

        }

    }
    <a href="?page=@Model.totalPage">@Model.totalPage</a>
    <a href="#">&raquo;</a>
</div>

