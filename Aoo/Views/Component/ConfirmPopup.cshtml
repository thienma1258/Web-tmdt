@model string;
<button class="btn btn-warning" id="btn-confirm">Xóa</button>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Xác nhận yêu cầu xóa</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-id="@Model" id="modal-btn-si">Yes</button>
                <button type="button" class="btn btn-info" id="modal-btn-no">No</button>
            </div>
        </div>
    </div>
</div>
<script>
    var DeleteConfirm = function (callback) {
        $("#btn-confirm").on("click", function () {
            $("#mi-modal").modal('show');
        });

        $("#modal-btn-si").on("click", function (){
            var id =$(this).data("id");
            callback(true, id);
            $("#mi-modal").modal('hide');
        });

        $("#modal-btn-no").on("click", function () {
            $("#mi-modal").modal('hide');
        });
    };
</script>