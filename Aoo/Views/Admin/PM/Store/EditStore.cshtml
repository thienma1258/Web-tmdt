@model Aoo.ViewModels.PM.Store.EditViewStoreModel
@{
    ViewData["Title"] = "EditStore";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}
<h2>EditStore</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditStore" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameStore" class="control-label"></label>
                <input asp-for="NameStore" class="form-control" />
                <span asp-validation-for="NameStore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DefaultImage" class="control-label"></label>
                @await Html.PartialAsync("~/Views/Component/SingpleUploadImage.cshtml", new Aoo.ViewModels.Component.SingleUploadImageModel { Name = "DefaultImage",DefaultImage=Model.DefaultImageString })
                <span asp-validation-for="DefaultImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div class="backtolist">
    <a href="/Store/Index">Trở lại trang chủ </a>
</div>