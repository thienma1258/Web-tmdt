@model Common.ViewModel.PM.CategoryViewModel

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>Chỉnh Sửa Kiểu Giày Mới</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên Kiểu Giày</label>
                <input asp-for="nameCategory" class="form-control" />
                <span asp-validation-for="nameCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh</label>
                <input asp-for="defaultImages" class="form-control" />
                <span asp-validation-for="defaultImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="backtolist">
    <a href="/Product/Index">Trở lại trang quản lý</a>
</div>

