@model Aoo.ViewModels.PM.MainGroup.AddMainGroupViewModel
@using Common.Enum.PM;

@{
    ViewData["Title"] = "AddMainGroup";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>Ngành hàng chính</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMainGroup" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @Html.DisplayNameFor(model => model.DefaultImage)</label>
               
                @await Html.PartialAsync("~/Views/Component/SingpleUploadImage.cshtml", new Aoo.ViewModels.Component.SingleUploadImageModel { Name = "DefaultImage" }));
                <span asp-validation-for="DefaultImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeSex" class="control-label"></label>
                <select asp-for="TypeSex" asp-items="Html.GetEnumSelectList<TypeSexEnum>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="TypeSex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

