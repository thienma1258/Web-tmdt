@model Aoo.ViewModels.PM.MainGroup.EditMainGroupViewModel
@using Common.Enum.PM;
@{
    ViewData["Title"] = "EditMainGroup";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>EditMainGroup</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMainGroup" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    @Model.Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.OldImage" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DefaultImage" class="control-label"></label>
                @await Html.PartialAsync("~/Views/Component/SingpleUploadImage.cshtml", new Aoo.ViewModels.Component.SingleUploadImageModel { Name = "DefaultImage", DefaultImage = Model.OldImage })
                <span asp-validation-for="DefaultImage" class="text-danger"></span>
            </div>
            <label asp-for="Description" class="control-label"></label>
            <div style="width:250%">
                <textarea name="Description" style="width:100%;height:200px" id="editor"></textarea>
            </div>
            <div class="form-group">
                <label>Giới Tính</label>
                <select asp-for="TypeSex" class="form-control" asp-items="Html.GetEnumSelectList<TypeSexEnum>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-danger" />
            </div>
        </form>
</div>
</div>

<div class="backtolist">
    <a href="/MainGroup/Index">Trở lại trang quản lý</a>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>


