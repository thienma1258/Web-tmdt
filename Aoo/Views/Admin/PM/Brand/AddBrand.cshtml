@model Common.ViewModel.PM.BrandViewModel

@{
    ViewData["Title"] = "AddBrand";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>Tạo Thương Hiệu Mới</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBrand">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên thương hiệu </label>
                <input asp-for="nameBrand" class="form-control" />
                <span asp-validation-for="nameBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh</label>
                <input asp-for="defaultImages" class="form-control" />
                <span asp-validation-for="defaultImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div class="backtolist">
    <input asp-action="Index"  value="Back to List" class="btn btn-info" />
</div>

