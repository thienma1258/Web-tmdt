@model Aoo.ViewModels.PM.HomeSlider.EditHomeSliderModel

@{
    ViewData["Title"] = "EditHomeSlider";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>Sửa Slider</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditHomeSlider" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ID" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderIndex" class="control-label"></label>
                <input asp-for="OrderIndex" class="form-control" />
                <span asp-validation-for="OrderIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                @await Html.PartialAsync("~/Views/Component/SingpleUploadImage.cshtml", new Aoo.ViewModels.Component.SingleUploadImageModel { Name = "ImagePath", DefaultImage=Model.OldImage })
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div class="backtolist">
    <a href="/HomeSlider/Index">Trở lại trang chủ </a>
</div>
