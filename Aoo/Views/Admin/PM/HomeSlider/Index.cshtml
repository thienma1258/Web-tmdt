@model IEnumerable<DAL.Model.PM.HomeSlider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_FrontEndAdminLayout.cshtml";
}

<h2>Index</h2>
<table class="tableslider">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderIndex)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderIndex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img width="100px" height="50px" src=@Url.Content(item.ImagePath) />
                </td>
                <td>

                    @Html.ActionLink("Add", "AddHomeSlider") |
                    @Html.ActionLink("Edit", "EditHomeSlider", new { id = item.ID }) |
                    @await Html.PartialAsync("~/Views/Component/ConfirmPopup.cshtml", item.ID)
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/Admin/PM/scripts.js"></script>
